
<% if (reciepe != null) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= reciepe.name %></li>
        </ol>
      </nav>

      <div class="row">
        <div class="col-12 col-md-4"></div>
      <img src="/img/<%= reciepe.image %>" class="img-fluid sticky-top" style="top: 20px; height: 700px; width: 100%;" alt="<%=reciepe.name %>" loading="lazy">
      </div>

      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%=reciepe.name %></h1></div>
          <div class="col-12 mb-4"><i class="bi bi-tag"><%= reciepe.category %></i></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Cooking Instructions</h4>
            <%= reciepe.description %>

          </div>
        </div>
        <div class="row pt-4">
          <div class="col-12">
            <h4>ingredients</h4>
            <ul class="list-group list-group-flush">
              <% reciepe.ingredients.forEach(function(ingredients,index) { %>
                <li class="list-group-item"><%-ingredients %></li>
                <% }); %>
            </ul>
          </div>
        </div>
      </div>
      
<% }
 else {%>
  <p>No item found</p>
  <% } %>


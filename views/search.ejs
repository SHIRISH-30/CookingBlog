<h1>Search</h1>

<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(reciepe != '') { %>
    <% reciepe.forEach(function(reciepe, index){ %>
    <a href="/recipe/<%= reciepe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/img/<%= reciepe.image %>" alt="<%= reciepe.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= reciepe.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>